<style>
.Title {
  font-family: 'PANTHON';
  text-align: center;
  font-size:60px;
  padding-top: 50px;
 
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}
@media screen and (max-width:500px){
  .Title {
    font-size: 40px;
  }
  .Correo {
    font-size: 15px !important;
  }
}

.carousel-container {
  width: 100%;
  overflow: hidden;
  position: relative;
}

.carousel-inner {
  display: flex;
  transition: transform 0.5s ease;
}

.carousel-slide {
  flex: 0 0 100%;
}

@keyframes slide {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-100%);
  }
}

.slide {
  animation: slide 10s infinite alternate;
}

.carousel-navigation {
  position: relative;


  display: flex;
}

.carousel-prev-btn,
.carousel-next-btn {

  border: none;
  padding: 10px 20px;
  margin: 0 10px;
  cursor: pointer;
  color: black;

  
}

.carousel-prev-btn {
  margin-right: auto; /* Alinea el botón "Prev" a la izquierda */
}

.carousel-next-btn {
  margin-left: auto; /* Alinea el botón "Next" a la derecha */
}
</style>

<script type="module">
  // Select the required elements
  const prevBtn = document.querySelector('.carousel-prev-btn');
  const nextBtn = document.querySelector('.carousel-next-btn');
  const carouselInner = document.querySelector('.carousel-inner');
  const slides = document.querySelectorAll('.carousel-slide');

  // Initialize the current index and slide width
  let currentIndex = 0;
  const slideWidth = slides[0]?.clientWidth ?? 0;

  // Check if all required elements exist before adding event listeners
  if (prevBtn && nextBtn && carouselInner && slides.length > 0) {
    prevBtn.addEventListener('click', () => {
      // Decrease the index, ensuring it wraps around to the last slide if it goes below 0
      currentIndex = (currentIndex - 1 + slides.length) % slides.length;
      // Update the transform property to slide to the correct slide
      carouselInner.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
    });

    nextBtn.addEventListener('click', () => {
      // Increase the index, ensuring it wraps around to the first slide if it exceeds the number of slides
      currentIndex = (currentIndex + 1) % slides.length;
      // Update the transform property to slide to the correct slide
      carouselInner.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
    });
  } else {
    console.error('Carousel elements are missing or incorrectly selected.');
  }
</script>
<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
      // Selecciona todos los enlaces internos que tienen un hash (#) o (/#)
      const links = document.querySelectorAll('a[href^="#"], a[href^="/#"]');
    
      // Agrega un evento de clic a cada enlace
      links.forEach(link => {
        link.addEventListener('click', e => {
          // Evita el comportamiento predeterminado del enlace
          e.preventDefault();
    
          // Obtiene el valor del atributo href del enlace
          let href = link.getAttribute('href');
    
          // Maneja el caso especial cuando el enlace comienza con "/#"
          if (href.startsWith('/#')) {
            href = href.substring(1); // Elimina la barra inicial
          }
    
          // Desplaza suavemente la página hasta la sección correspondiente
          document.querySelector(href).scrollIntoView({
            behavior: 'smooth'
          });
        });
      });
    });
    
  </script>